{
    "mainloop" : {
        "module" : "librbmcu.so",
        "preinitproc" : "rb_mcu_init",
        "contextsize" : 32
    },

    "ttys" : {
        "motionmcu" : {
            "module" : "librbmcu.so",
            "device" : "/dev/uart1",
            "baudrate" : 38400,
            "databits" : 8,
            "stopbits" : 1,
            "parity" : "none",
            "flowcontrol" : "none",
            "recvproc" : "rb_mcu_on_recvdata",
            "contextsize" : 0
        }
    },

    "redis-server" : {
        "myrobot" : {
            "host" : "127.0.0.1:7777",
            "contextsize" : 0
        }
    },

    "subscriber" : {
        "velocity" : {
            "redis-server" : "myrobot",
            "module" : "librbmcu.so",
            "execproc" : "rb_mcu_on_velocity_update",
            "channels" : [
                "motion.velocity.?*",
                "motion.v_?"
            ]
        }
    }
}
